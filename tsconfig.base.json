{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@fangio/schema": ["packages/schema/src/index.ts"],
      "@fangio/tools": ["packages/tools/src/index.ts"],
      "@fangio/planner": ["packages/planner/src/index.ts"]
    },
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
